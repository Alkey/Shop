<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.internet.shop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/user/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/user/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.AddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProducts</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllProducts</servlet-name>
        <url-pattern>/product/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProductToShoppingCart</servlet-name>
        <servlet-class>com.internet.shop.controllers.AddProductToShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToShoppingCart</servlet-name>
        <url-pattern>/shopping-carts/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCartProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingCartProducts</servlet-name>
        <url-pattern>/shopping-carts/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteFromShoppingCart</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteProductFromShoppingCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFromShoppingCart</servlet-name>
        <url-pattern>/shopping-carts/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>completeOrder</servlet-name>
        <servlet-class>com.internet.shop.controllers.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>completeOrder</servlet-name>
        <url-pattern>/shopping-carts/products/create-order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllUserOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/order/all-orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrderProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetOrderDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allOrderProducts</servlet-name>
        <url-pattern>/order/order-products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrdersFromDb</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllOrdersFromDbController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allOrdersFromDb</servlet-name>
        <url-pattern>/order/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/order/admin/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProductsAdmin</servlet-name>
        <servlet-class>com.internet.shop.controllers.GetAllProductsAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProductsAdmin</servlet-name>
        <url-pattern>/product/all/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromDb</servlet-name>
        <servlet-class>com.internet.shop.controllers.DeleteProductFromDbController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductFromDb</servlet-name>
        <url-pattern>/product/all/admin/delete</url-pattern>
    </servlet-mapping>
</web-app>
